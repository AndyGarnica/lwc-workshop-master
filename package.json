{
    "name": "lwc-workshop-master",
    "version": "1.0.0",
    "description": "LWC Workshop application",
    "scripts": {
        "lint": "npm run lint:lwc && npm run lint:aura",
        "lint:lwc": "eslint **/lwc/**",
        "test": "npm run lint && npm run test:unit",
        "test:unit": "lwc-jest",
        "test:unit:watch": "lwc-jest --watch",
        "test:unit:debug": "lwc-jest --debug",
        "prettier": "prettier --write '**/*.{cmp,component,css,html,js,json,md,page,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{cmp,component,css,html,js,json,md,page,yaml,yml}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/garazi/lwc-workshop-master.git"
    },
    "author": "salesforce.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/garazi/lwc-workshop-master/issues"
    },
    "homepage": "https://github.com/garazi/lwc-workshop-master#readme",
    "engines": {
        "node": ">= 10.13.0",
        "npm": ">= 6.5.0"
    },
    "devDependencies": {
        "@salesforce/eslint-config-lwc": "^0.3.0",
        "@salesforce/lwc-jest": "^0.5.0",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "lint-staged": "^8.2.0",
        "prettier": "^1.18.2",
        "semver": "^6.1.1"
    },
    "lint-staged": {
        "**/*.{cmp,component,css,html,js,json,md,page,yaml,yml}": [
            "prettier --write"
        ],
        "**/lwc/**": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    }
}
